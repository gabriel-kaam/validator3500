"use strict";

const moment = require("moment");

const checks = {};

checks.accepts = (value, valuesAccepted) => {
  return valuesAccepted.indexOf(value) !== -1;
};
checks.date_format = (value, dateFormat) => {
  const date = moment(value, dateFormat);
  return date.isValid();
};
checks.fn = (value, fn) => {
  return fn(value);
};
checks.max_length = (value, maxLenght) => {
  return value.length <= maxLenght;
};
checks.regex = (value, regex) => {
  return regex.test(value);
};

module.exports = checks;
